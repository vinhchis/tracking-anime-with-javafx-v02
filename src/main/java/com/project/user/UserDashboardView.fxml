<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane fx:id="userDashboardBP" prefHeight="746.0" prefWidth="1102.0" stylesheets="@/css/styles.css" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.project.user.UserDashboardController">
  <center>
    <StackPane fx:id="userStackPane" prefHeight="150.0" prefWidth="200.0" BorderPane.alignment="CENTER" />
  </center>

  <top>
    <VBox prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
      <children>
        <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="200.0">
          <children>
            <VBox prefHeight="132.0" prefWidth="536.0">
              <children>
                <HBox prefHeight="150.0" prefWidth="275.0" spacing="20.0">
                  <children>
                    <ImageView fitHeight="76.0" fitWidth="146.0" pickOnBounds="true" preserveRatio="true">
                      <image>
                        <Image url="@/images/icons/logo.png" />
                      </image>
                    </ImageView>
                    <Label prefHeight="76.0" prefWidth="460.0" text="Tracking Anime" textFill="#0004fadc" wrapText="true">
                      <font>
                        <Font size="32.0" />
                      </font>
                    </Label>
                  </children>
                  <padding>
                    <Insets bottom="10.0" left="10.0" />
                  </padding>
                </HBox>
                <Label prefHeight="22.0" prefWidth="541.0" text="Simplified. Your anime journey, organized. All your anime, one list" textFill="#1c0da4" wrapText="true">
                  <font>
                    <Font size="16.0" />
                  </font>
                </Label>
              </children>
            </VBox>
            <StackPane fx:id="authStackPane">
              <HBox fx:id="loggedInPane" alignment="CENTER_RIGHT" spacing="15" style="-fx-padding: 10;">
                <Label fx:id="helloLabel" textFill="#f80000" wrapText="true">
                           <font>
                              <Font name="System Italic" size="20.0" />
                           </font></Label>
                <Button onAction="#handleLogout" text="Logout" />
              </HBox>
              <HBox fx:id="loggedOutPane" alignment="CENTER_RIGHT" spacing="15" style="-fx-padding: 10;">
                <Button onAction="#handleLogin" text="Login" />
                <Button onAction="#handleLogout" text="Register" />
              </HBox>
            </StackPane>
          </children>
          <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
          </padding>
        </HBox>
        <HBox prefHeight="173.0" prefWidth="1093.0" spacing="20.0">
          <children>
            <Button fx:id="overviewButton" mnemonicParsing="false" text="Overview">
              <font>
                <Font name="System Italic" size="20.0" />
              </font>
            </Button>
            <Button fx:id="myListButton" mnemonicParsing="false" text="My list">
              <font>
                <Font name="System Italic" size="20.0" />
              </font>
            </Button>
            <Button fx:id="discoverButton" mnemonicParsing="false" text="Discover">
              <font>
                <Font name="System Italic" size="20.0" />
              </font>
            </Button>
          </children>
          <VBox.margin>
            <Insets bottom="10.0" left="20.0" top="10.0" />
          </VBox.margin>
        </HBox>
      </children>
    </VBox>
  </top>
</BorderPane>
